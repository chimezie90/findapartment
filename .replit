run = "python -m apartment_finder.web.app"
entrypoint = "src/apartment_finder/web/app.py"
modules = ["python-3.12", "web", "nix"]

[env]
PYTHONPATH = "${REPL_HOME}/src"

[nix]
channel = "stable-25_05"
packages = ["libyaml"]

[deployment]
run = ["python", "-m", "apartment_finder.web.app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

# Scheduled tasks - runs twice daily at 8am and 8pm UTC
[[scheduled]]
name = "fetch-nyc-morning"
cron = "0 8 * * *"
command = "python -m apartment_finder.main --city nyc --source craigslist"

[[scheduled]]
name = "fetch-nyc-evening"
cron = "0 20 * * *"
command = "python -m apartment_finder.main --city nyc --source craigslist"

[[scheduled]]
name = "fetch-la-morning"
cron = "5 8 * * *"
command = "python -m apartment_finder.main --city la --source craigslist"

[[scheduled]]
name = "fetch-la-evening"
cron = "5 20 * * *"
command = "python -m apartment_finder.main --city la --source craigslist"

[[scheduled]]
name = "fetch-dubai-morning"
cron = "10 8 * * *"
command = "python -m apartment_finder.main --city dubai --source findproperties"

[[scheduled]]
name = "fetch-dubai-evening"
cron = "10 20 * * *"
command = "python -m apartment_finder.main --city dubai --source findproperties"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apartment Finder"

[[workflows.workflow]]
name = "Apartment Finder"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python3.11 -m apartment_finder.web.app"
waitForPort = 5000
